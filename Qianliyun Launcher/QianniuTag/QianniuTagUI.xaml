<UserControl x:Class="Qianliyun_Launcher.QianniuTag.QianniuTagUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Qianliyun_Launcher.QianniuTag"
             mc:Ignorable="d" 
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <DataGrid x:Name="CaptureResultDataGrid" DockPanel.Dock="Right" ItemsSource="{Binding Source={StaticResource LiveSessions}}" DisplayMemberPath="Name" Width="260" AutoGenerateColumns="False" CanUserAddRows="False" CanUserSortColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="UserName" Width="Auto" Header="用户名" Binding="{Binding Username}"/>
                <DataGridTextColumn x:Name="UserAction" Width="Auto" Header="动作" Binding="{Binding UserAction}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
